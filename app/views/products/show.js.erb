$('#product-<%= @product.id %>').after('<%= j render("show") %>');
$('#product-<%= @product.id %>').remove();
$('#hide_details_<%= @product.id %>').click(function() {
  $('#product-details-<%= @product.id %>').before('<%= j render @product %>')
  $('#product-details-<%= @product.id %>').remove();
});
